<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF"
    >

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="19dp"
        android:background="@color/purple_200"
        android:fontFamily="@font/baloo_tamma"
        android:gravity="center"
        android:text="20"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="400dp"
        android:layout_height="210dp"
        android:layout_below="@+id/timer"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:text="How many layers does OSI layer have?"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/flashcard_hint"
        android:layout_width="400dp"
        android:layout_height="210dp"
        android:layout_below="@+id/timer"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/answer_background"
        android:fontFamily="@font/baloo_tamma"
        android:gravity="center"
        android:text="Hint: It's a traditional model"
        android:textSize="34sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/next_card"
        android:layout_width="70dp"
        android:layout_height="67dp"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="330dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/next_icon" />

    <ImageView
        android:id="@+id/delete_card"
        android:layout_width="78dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="11dp"
        android:layout_toStartOf="@+id/toggle_choices_visibility"
        android:src="@drawable/trash_icon" />

    <ImageView
        android:id="@+id/prev_card"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:layout_alignParentLeft="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="330dp"
        android:layout_marginLeft="34dp"
        android:rotation="180"
        android:src="@drawable/next_icon" />

    <TextView
        android:id="@+id/flashcard_answer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="224dp"
        android:background="@color/orange"
        android:fontFamily="@font/baloo_tamma"
        android:gravity="center"
        android:text="Three"
        android:textColor="#B48080"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/flashcard_answer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="161dp"
        android:background="@color/orange"
        android:fontFamily="@font/baloo_tamma"
        android:gravity="center"
        android:text="Seven"
        android:textColor="#B48080"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/flashcard_answer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="102dp"
        android:background="@color/orange"
        android:fontFamily="@font/baloo_tamma"
        android:gravity="center"
        android:text="Five"
        android:textColor="#B48080"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/eye_hidden" />

    <ImageView
        android:id="@+id/add_new_card"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/plus_icon" />

    <ImageView
        android:id="@+id/edit_card"
        android:layout_width="75dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="168dp"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="329dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="327dp"
        android:src="@drawable/edit_icon" />

</RelativeLayout>